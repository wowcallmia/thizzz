{
  "extends": "airbnb",
  "plugins": ["react", "babel"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    "max-len": ["error", 100, { "ignoreComments": true, "ignoreTrailingComments": true, "ignoreStrings": true, "ignoreUrls": true, "ignoreTemplateLiterals": true}],
    # "max-len": 0,
    "react/jsx-boolean-value": 1,
    "no-param-reassign": [1, { "props": false }],
    "react/prefer-stateless-function": [2, { "ignorePureComponents": true }],
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies": [2, { "devDependencies": true } ],
    "no-irregular-whitespace": [1, { "skipStrings": true, "skipComments": true, "skipTemplates": true }],
    "no-useless-escape": 0,
    "camelcase": 1,
    "linebreak-style": 0,
    "no-underscore-dangle":["error",{"allow": ["_id"]}],
    "no-use-before-define": [2, { "functions": false, "classes": true }]
  }
}
